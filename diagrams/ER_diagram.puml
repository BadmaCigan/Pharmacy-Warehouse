@startchen
left to right direction

entity Аптека {
    название
    электронная_почта
    пароль/'хэш пароля'/
    адрес
    статус /'подтверждённая или нет'/
}

entity Сотрудник {
    фамилия
    имя
    отчество
    электронная_почта
    пароль/'хэш пароля'/
    роль /'оператор или администратор'/
}

entity Заказ {
    номер
    статус/'новый,рассматривается,подтверждён,отменён'/
    дата
}

entity Позиция_заказа {
    количество
    цена
}

entity Лекарственный_Препарат {
    название
    лекарственная_форма /'мазь, крем, таблетки'/
    дозировка
    по_рецепту
    изготовитель
}

entity Лекарственное_Средство {
    название
    вещества
}

entity Партия {
    номер
    дата_изготовления
    срок_годности
    количество_упаковок
}

entity Упаковка {
    код_маркировки /'уникальный- система "Честный Знак"'/
    статус /'свободная, просрочена, в заказе'/
}

' ---- Связи ----
relationship Оформляет {
}
relationship Обрабатывает {
}
relationship Содержит {
}
relationship Производится_В_Виде {
}
relationship Имеет {
}
relationship Состоит_Из {
}
relationship Относится_к {
}




' Аптека оформляет заказы
Аптека -1- Оформляет
Оформляет -N- Заказ

' Сотрудник обрабатывает заказы
Сотрудник -1- Обрабатывает
Обрабатывает -N- Заказ

' Заказ содержит позиции
Заказ -1- Содержит
Содержит -N- Позиция_заказа

' Позиция заказа указывает на препарат
Позиция_заказа -N- Относится_к
Относится_к -1- Лекарственный_Препарат

' Лекарственное средство -> препараты
Лекарственное_Средство -1- Производится_В_Виде
Производится_В_Виде -N- Лекарственный_Препарат

' Препарат имеет партии
Лекарственный_Препарат -1- Имеет
Имеет -N- Партия

' Партия состоит из упаковок
Партия -1- Состоит_Из
Состоит_Из -N- Упаковка

@endchen
